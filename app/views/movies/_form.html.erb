<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br />

  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <br />

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />

  <%= f.label :trailer %>
  <%= f.text_area :trailer %>
  <br />

  <%= f.submit %>
<% end %>

